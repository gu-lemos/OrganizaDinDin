@using OrganizaDinDin.Domain.Enums
@model List<Gasto>
@{
    ViewData["Title"] = "Listagem de Gastos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/gastos.css" asp-append-version="true" />
}

<div class="page-title d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
    <h1 class="mb-0"><i class="bi bi-wallet"></i> Listagem de Gastos</h1>
    <button class="btn btn-dark" id="btnNovoGasto" data-bs-toggle="modal" data-bs-target="#gastoModal">
        <i class="bi bi-plus-circle me-2"></i>Novo Gasto
    </button>
</div>

<div class="card mb-4 filter-card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtros</h5>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index" id="filterForm" novalidate>
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="filtroDescricao" class="form-label small">Descrição</label>
                    <input type="text" class="form-control" id="filtroDescricao" name="descricao" value="@ViewBag.Descricao" placeholder="Buscar por descrição..." />
                </div>
                <div class="col-md-3">
                    <label for="filtroTipo" class="form-label small">Tipo</label>
                    <div class="dropdown-tipo">
                        <button type="button" class="form-control text-start dropdown-tipo-toggle" id="filtroTipo">
                            <span class="dropdown-tipo-text">Selecione os tipos...</span>
                            <i class="bi bi-chevron-down float-end"></i>
                        </button>
                        <div class="dropdown-tipo-menu">
                            @foreach (ETipoGasto tipo in Enum.GetValues(typeof(ETipoGasto)))
                            {
                                var isSelected = ViewBag.Tipos != null && ((List<int>)ViewBag.Tipos).Contains((int)tipo);
                                <label class="dropdown-tipo-item">
                                    <input type="checkbox" name="tipos" value="@((int)tipo)" @(isSelected ? "checked" : "") />
                                    <span>@tipo.GetDescription()</span>
                                </label>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <label for="filtroDataInicio" class="form-label small">Data Início</label>
                    <input type="date" class="form-control" id="filtroDataInicio" name="dataInicio" value="@ViewBag.DataInicio" />
                </div>
                <div class="col-md-2">
                    <label for="filtroDataFim" class="form-label small">Data Fim</label>
                    <input type="date" class="form-control" id="filtroDataFim" name="dataFim" value="@ViewBag.DataFim" />
                </div>
                <div class="col-md-1 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-dark w-100" title="Aplicar filtros">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <button type="button" class="btn btn-outline-secondary" id="btnLimparFiltros">
                        <i class="bi bi-x-circle me-1"></i>Limpar filtros
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Descrição</th>
                <th>Tipo</th>
                <th>Data</th>
                <th>Valor</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody id="gastosTableBody">
            @foreach (var gasto in Model)
            {
                <tr data-id="@gasto.Id">
                    <td>@gasto.Descricao</td>
                    <td><span class="badge badge-tipo bg-dark">@gasto.Tipo.GetDescription()</span></td>
                    <td>@gasto.Data.ToString("dd/MM/yyyy")</td>
                    <td class="valor-positivo">R$ @((gasto.Valor / 100.0).ToString("N2"))</td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-warning btn-editar" data-gasto-id="@gasto.Id" title="Editar">
                            <i class="bi bi-pencil-fill"></i>
                        </button>
                        <button class="btn btn-sm btn-danger btn-deletar" data-gasto-id="@gasto.Id" title="Excluir">
                            <i class="bi bi-trash-fill"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
        @if (Model.Any())
        {
            <tfoot>
                <tr class="table-secondary">
                    <td colspan="3" class="text-end fw-bold">TOTAL:</td>
                    <td class="valor-positivo">R$ @((Model.Sum(g => g.Valor) / 100.0).ToString("N2"))</td>
                    <td></td>
                </tr>
            </tfoot>
        }
    </table>
</div>

<!-- Modal de Confirmação de Exclusão -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Exclusão</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Tem certeza que deseja deletar este gasto?</p>
                <p class="text-muted small mb-0">Esta ação não pode ser desfeita.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="btnConfirmarDelete">Deletar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Criar/Editar Gasto -->
<div class="modal fade" id="gastoModal" tabindex="-1" aria-labelledby="gastoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title" id="gastoModalLabel">Novo Gasto</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="gastoForm" novalidate>
                    <input type="hidden" id="gastoId" />

                    <div class="mb-3">
                        <label for="descricao" class="form-label">Descrição</label>
                        <input type="text"
                               class="form-control"
                               id="descricao"
                               maxlength="200">
                        <div class="invalid-feedback">
                            A descrição deve ter entre 5 e 200 caracteres
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="tipo" class="form-label">Tipo</label>
                        <select class="form-select" id="tipo">
                            <option value="">Selecione um tipo</option>
                            @foreach (ETipoGasto tipo in System.Enum.GetValues(typeof(ETipoGasto)))
                            {
                                <option value="@((int)tipo)">@tipo.GetDescription()</option>
                            }
                        </select>
                        <div class="invalid-feedback">
                            O tipo é obrigatório
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="data" class="form-label">Data</label>
                        <input type="date"
                               class="form-control"
                               id="data">
                        <div class="invalid-feedback">
                            A data é obrigatória
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="valor" class="form-label">Valor</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text">R$</span>
                            <input type="text"
                                   class="form-control"
                                   id="valor"
                                   placeholder="0,00">
                            <div class="invalid-feedback">
                                O valor deve ser maior que zero
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-dark" id="btnSalvarGasto">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.gastosData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model));
    </script>
    <script src="~/js/gastos.js" asp-append-version="true"></script>
}
