@{
    ViewData["Title"] = "Acesso Negado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body class="bg-light login-bg">
    <div class="container-fluid">
        <div class="row min-vh-100 justify-content-center align-items-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4 col-xxl-3">
                <div class="shadow-lg p-4 p-sm-5 text-bg-dark rounded-4 border border-light border-opacity-10">
                    <div class="text-center">
                        <div class="mb-4">
                            <i class="bi bi-shield-x text-danger" style="font-size: 5rem;"></i>
                        </div>

                        <h2 class="mb-3 fw-semibold">Acesso Negado</h2>
                        <p class="mb-4 text-light text-opacity-75">
                            Você não tem permissão para acessar esta página.
                        </p>

                        <div class="d-grid gap-2">
                            <form method="post" asp-action="Logout">
                                <button type="submit" class="btn btn-outline-danger btn-lg w-100 py-3 fw-semibold">
                                    <i class="bi bi-box-arrow-right me-2"></i>Sair
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
