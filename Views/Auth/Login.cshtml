@model LoginDto
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body class="bg-light login-bg">
    <div class="container-fluid">
        <div class="row min-vh-100 justify-content-center align-items-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4 col-xxl-3">
                <div class="shadow-lg p-4 p-sm-5 text-bg-dark rounded-4 border border-light border-opacity-10">
                    <div class="text-center mb-4">
                        <h2 class="mb-3 fw-semibold">
                            <div class="d-flex justify-content-center gap-1 align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-coin" viewBox="0 0 16 16">
                                    <path d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.435 1.048.91 0 .542-.412.914-1.135.982V8.518z" />
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                    <path d="M8 13.5a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11m0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12" />
                                </svg> 
                                <span>rganizaDinDin</span>
                            </div>
                        </h2>
                        <p class="mb-0">Faça login para continuar</p>
                    </div>

                    <form method="post" asp-action="Login" id="loginForm">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label small">Email</label>
                            <input asp-for="Email" id="loginEmail" class="form-control form-control-lg" type="email" placeholder="seu@email.com" />
                            <div class="invalid-feedback">Por favor, informe um email válido.</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Senha" class="form-label small">Senha</label>
                            <input asp-for="Senha" id="loginSenha" class="form-control form-control-lg" type="password" placeholder="••••••••" />
                            <div class="invalid-feedback">A senha deve ter no mínimo 6 caracteres.</div>
                        </div>

                        <button type="submit" class="btn btn-outline-light btn-lg w-100 py-3 fw-semibold">
                            Entrar
                        </button>

                        <div class="text-center mt-4">
                            <p class="mb-0">Não tem uma conta? <a class="link-light link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" asp-action="Register">Cadastre-se</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
</body>
</html>
