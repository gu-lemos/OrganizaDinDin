<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrganizaDinDin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Header Mobile -->
        <header class="mobile-header d-md-none">
            <button class="btn btn-dark" type="button" id="btnToggleSidebar">
                <i id="toggleIconMobile" class="bi bi-list fs-5"></i>
            </button>
            <span class="fw-bold">OrganizaDinDin</span>
        </header>

        <div class="d-flex layout-wrapper">
            <!-- Overlay Mobile -->
            <div id="sidebarOverlay" class="sidebar-overlay"></div>

            <!-- Sidebar -->
            <div id="sidebar" class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark">
                <!-- Brand -->
                <a href="/Gastos/Index" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <i class="bi bi-coin fs-4 me-2"></i>
                    <span class="fs-4 sidebar-text">OrganizaDinDin</span>
                </a>
                <hr>

                <!-- Menu -->
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" data-bs-toggle="collapse" href="#gastosSubmenu" role="button" aria-expanded="true">
                            <i class="bi bi-wallet2 me-2"></i>
                            <span class="sidebar-text">Gastos</span>
                        </a>
                        <div class="collapse show" id="gastosSubmenu">
                            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-4">
                                <li>
                                    <a href="/Gastos/Index" class="nav-link link-light @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                                        <i class="bi bi-list-ul me-2"></i>
                                        <span class="sidebar-text">Listagem</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Gastos/Resumo" class="nav-link link-light @(ViewContext.RouteData.Values["action"]?.ToString() == "Resumo" ? "active" : "")">
                                        <i class="bi bi-pie-chart me-2"></i>
                                        <span class="sidebar-text">Resumo</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>

                <hr>

                <!-- User Dropdown -->
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center me-2 user-avatar">
                            <strong>@User.Identity.Name?.Substring(0, 1).ToUpper()</strong>
                        </div>
                        <strong class="sidebar-text">@User.Identity.Name</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                        <li>
                            <form method="post" asp-controller="Auth" asp-action="Logout">
                                <button type="submit" class="dropdown-item">
                                    <i class="bi bi-box-arrow-right me-2"></i>Sair
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="flex-grow-1 main-content">
                <main class="p-4">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <!-- Layout para páginas não autenticadas (Login/Register) -->
        @RenderBody()
    }

    <!-- Toast Container -->
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="toastNotification" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <span id="toastMessage"></span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/toast.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
